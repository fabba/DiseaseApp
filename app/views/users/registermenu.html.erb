<div class= "Sign_Form">
  <h1>Register</h1>
  <% if flash[:notice] %>
    <div class="notice" style="color:red"><%= flash[:notice] %></div>
    <%  flash[:notice] = "" %>
  <% end %>
  <%= form_tag(:controller => 'users', :action => 'register') do %>
    <p>Username:</br> <%= text_field_tag :username %></p> 
    <p>Password:</br> <%= password_field_tag :password %></p> 
    <p>Comfirm Password:</br> <%= password_field_tag :confirmpassword %></p> 
    <%= submit_tag("Register") %>
  <% end %>
</div>
